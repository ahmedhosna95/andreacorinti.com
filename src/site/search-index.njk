---
permalink: search.json
excludeFromSitemap: true
---
{"search" : [
{%- for item in collections.articles -%}
  {
    "url" : "{{ item.url }}",
    "title" : "{{ item.data.title }}",
    "text" : "{{ (item.data.title + " " + item.templateContent) | squash }}"
  }{% if not loop.last %},{% else %}
  {%- endif -%}
{%- endfor -%}
]}
